model User {
  id    String  @id @default(cuid())
  name  String?
  image String?

  email         String    @unique
  emailVerified DateTime?

  password String

  accounts      Account[]
  sessions      Session[]
  // Optional for WebAuthn support
  Authenticator Authenticator[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
